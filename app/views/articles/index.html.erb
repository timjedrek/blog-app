<div class="tj-g">
    <% @articles.reverse_each do |article| %>
      <div class="tj-u-lg-1-3 tj-u-1 l-box">
        <div class="t-box">
          <h3 class="content-subhead">
            <b><%= article.title %></b>
          </h3>
          <div>
            <%= truncate(article.text, length: 100) %>
            <br><br>
          </div>
          <div class="right-align">
            <%= link_to 'Read More', article_path(article), :class => 'tj-button tj-button-primary ' %>
          </div>
        </div>
      </div>
    <% end %>

</div>


